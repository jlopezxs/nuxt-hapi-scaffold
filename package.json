{
  "name": "Nuxt hapi scaffold",
  "version": "1.0.0",
  "description": "Nuxt & Hapi scaffold",
  "main": "index.js",
  "author": "Pere Monfort",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node-dev --no-notify server/index.js ",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "jest:server": "jest --config=config/jest/server.json",
    "jest:client": "jest --config=config/jest/client.json",
    "tdd:client": "yarn run jest:client --watch --verbose",
    "tdd:server": "yarn run jest:server --watch --verbose",
    "test:client": "yarn run jest:client --coverage",
    "test:server": "yarn run jest:server --coverage"
  },
  "dependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/style-resources": "^0.1.1",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "consola": "^2.3.0",
    "cross-env": "^5.2.0",
    "hapi": "^17.7.0",
    "hapi-nuxt": "^1.0.1",
    "memoizejs": "^0.1.1",
    "node-dev": "^3.1.3",
    "node-sass": "^4.10.0",
    "nuxt": "^2.3.1",
    "sass-loader": "^7.1.0",
    "ua-parser-js": "^0.7.19",
    "vue": "^2.5.17",
    "vue-i18n": "^8.3.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.9.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-jest": "^22.1.0",
    "eslint-plugin-vue": "^4.7.1",
    "jest": "^23.6.0"
  },
  "engines": {
    "node": ">=8"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": false,
          "forceAllTransforms": true
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-object-rest-spread"
    ]
  }
}
